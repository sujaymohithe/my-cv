// This is Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

enum ContactType {
  EMAIL
  GITHUB
  LINKEDIN
  WEBSITE
}

model ContactMethod {
  id        String      @id @default(cuid())
  type      ContactType
  label     String?
  value     String
  order     Int         @default(0)
  visible   Boolean     @default(true)
  profileId String
  profile   Profile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  createdAt DateTime    @default(now())
}

model Profile {
  id                     String          @id @default("sujay_mohithe")
  name                   String
  designation            String
  professionalStatements String[]
  professionalSummaries  String[]
  workingPrinciples      String[]
  aboutSections          Json
  contacts               ContactMethod[]
  techStacks             TechCategory[]
  experiences            Experience[]
  createdAt              DateTime        @default(now())
  updatedAt              DateTime        @updatedAt
}

model TechCategory {
  id        String     @id @default(cuid())
  name      String
  order     Int
  profileId String
  profile   Profile    @relation(fields: [profileId], references: [id], onDelete: Cascade)
  items     TechItem[]

  @@unique([profileId, name])
  @@index([profileId, order])
}

model TechItem {
  id         String       @id @default(cuid())
  name       String
  order      Int
  categoryId String
  category   TechCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId, order])
}

model Project {
  id          String   @id
  title       String
  description String
  highlights  String[]
  stacks      String[]
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([featured])
}

model Experience {
  id         String                @id @default(cuid())
  company    String
  role       String
  startYear  Int
  endYear    Int?
  isCurrent  Boolean               @default(false)
  stacks     String[]
  order      Int
  profileId  String
  profile    Profile               @relation(fields: [profileId], references: [id], onDelete: Cascade)
  highlights ExperienceHighlight[]
  createdAt  DateTime              @default(now())
  updatedAt  DateTime              @updatedAt

  @@index([profileId])
}

model ExperienceHighlight {
  id           String     @id @default(cuid())
  text         String
  order        Int
  experienceId String
  experience   Experience @relation(fields: [experienceId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
}
